[Unit]
Description=Conan the Destroyer of sandboxes
After=network-online.target
Documentation=https://github.com/redhat-gpte-devopsautomation/aws-tools/tree/master/conan

[Service]
User=opentlc-mgr
Group=opentlc-mgr
Type=simple
Environment=PATH=/usr/local/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/home/opentlc-mgr/.local/bin:/home/opentlc-mgr/bin
ExecStart=/bin/bash /opt/rh/conan.sh
Restart=on-failure
StartLimitBurst=3
StartLimitInterval=60s

[Install]
WantedBy=multi-user.target